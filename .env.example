# Kora Rent-Reclaim Bot - Environment Configuration Template
# Copy this file to .env and fill in your values

# ==============================================================================
# Solana Configuration
# ==============================================================================

# RPC endpoint (use devnet for testing, mainnet for production)
# Free options:
#   Devnet: https://api.devnet.solana.com
#   Mainnet: https://api.mainnet-beta.solana.com
# Paid options (recommended for production):
#   Helius: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
#   Alchemy: https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com

# Commitment level: processed | confirmed | finalized
# Recommended: confirmed (balance of speed and safety)
COMMITMENT_LEVEL=confirmed

# ==============================================================================
# Kora Configuration
# ==============================================================================

# Kora program ID (get this from Kora documentation)
KORA_PROGRAM_ID=YourKoraProgramIdHere

# Path to your fee payer keypair JSON file
# SECURITY: Never commit this file to git!
# Generate with: solana-keygen new --outfile ./config/fee-payer.json
FEE_PAYER_KEYPAIR_PATH=./config/fee-payer.json

# ==============================================================================
# Monitoring Settings
# ==============================================================================

# How often to scan for accounts (in seconds)
# Recommended: 60 (1 minute) for devnet, 30 for mainnet
SCAN_INTERVAL_SECONDS=60

# Number of accounts to check per batch
# Max: 100 (Solana RPC limit)
BATCH_SIZE=100

# Number of batches to process concurrently
# Higher = faster but more RPC calls
MAX_CONCURRENT_BATCHES=5

# ==============================================================================
# Rate Limiting
# ==============================================================================

# Maximum RPC requests per time window
# Public endpoints: 100 per 10 seconds
# Adjust based on your RPC provider's limits
MAX_RPC_REQUESTS_PER_WINDOW=100

# Rate limit window duration (in milliseconds)
RATE_LIMIT_WINDOW_MS=10000

# ==============================================================================
# Transaction Settings
# ==============================================================================

# Priority fee to add to transactions (in lamports)
# Higher = faster confirmation, but costs more
# 5000 lamports = 0.000005 SOL
PRIORITY_FEE_LAMPORTS=5000

# Maximum number of times to retry failed transactions
MAX_RETRIES=3

# Base delay between retries (in milliseconds)
# Uses exponential backoff: 1s, 2s, 4s, 8s, etc.
RETRY_DELAY_MS=1000

# ==============================================================================
# State Management
# ==============================================================================

# Path to SQLite database file
# Will be created automatically if it doesn't exist
DATABASE_PATH=./data/bot-state.db

# Cache size (number of account infos to keep in memory)
CACHE_SIZE=1000

# Cache TTL (time to live in milliseconds)
CACHE_TTL_MS=30000

# ==============================================================================
# Dashboard
# ==============================================================================

# Enable web dashboard
DASHBOARD_ENABLED=true

# Dashboard HTTP port
DASHBOARD_PORT=3000

# Dashboard authentication (optional)
# Leave empty to disable authentication
DASHBOARD_USERNAME=
DASHBOARD_PASSWORD=

# ==============================================================================
# Logging
# ==============================================================================

# Log level: debug | info | warn | error
# Recommended: info for production, debug for development
LOG_LEVEL=info

# Write logs to file
LOG_TO_FILE=true

# Log file path
LOG_FILE_PATH=./logs/bot.log

# Maximum log file size (in bytes, 10MB default)
LOG_MAX_SIZE=10485760

# Number of log files to keep
LOG_MAX_FILES=5

# ==============================================================================
# Advanced Options (Optional)
# ==============================================================================

# Enable dry-run mode (don't submit transactions, just log them)
# DRY_RUN=false

# Minimum account balance to reclaim (in lamports)
# Skip accounts with less rent to save on transaction fees
# MIN_RECLAIM_LAMPORTS=1000000

# Webhook URL for notifications (optional)
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Telegram bot token for alerts (optional)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_CHAT_ID=

# ==============================================================================
# Development Options
# ==============================================================================

# Enable debug mode (more verbose logging, additional checks)
# DEBUG=false

# Mock RPC responses (for testing without actual blockchain)
# MOCK_RPC=false
